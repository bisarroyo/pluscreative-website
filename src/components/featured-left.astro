---
import Badge from "@/components/ui/badge.astro";

const {  title, text, badge } = Astro.props;

interface Props {
  title: string;
  text: string;
  badge: string;
}
---

<section class="w-full py-4 lg:py-10 px-4 lg:px-0">
    <div class="container mx-auto">
      <div class="flex flex-col-reverse lg:flex-row gap-10 lg:items-center">
        <div class="bg-muted rounded-md w-full aspect-video h-full flex-1"></div>
        <div class="flex gap-4 pl-0 lg:pl-20 flex-col  flex-1">
          <div>
            <Badge>{badge}</Badge>
          </div>
          <div class="flex gap-2 flex-col">
            <h2 class="text-xl md:text-3xl lg:text-5xl tracking-tighter lg:max-w-xl font-regular text-left">
              {title}
            </h2>
            <p class="text-lg max-w-xl lg:max-w-sm leading-relaxed tracking-tight text-muted-foreground text-left">
              {text}
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>