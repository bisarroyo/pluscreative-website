---
interface Props {
  image: string
  name: string
  position: string
}

const {image, name, position} = Astro.props
---

<div class="bg-slate-200 w-full md:w-3/12 h-auto rounded-xl overflow-hidden">
  <img src={image} alt={name} class="aspect-square">
  <h4 class="pt-3">{name}</h4>
  <p class="pb-3">{position}</p>
</div>