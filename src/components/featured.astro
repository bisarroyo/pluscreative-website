---
import Badge from "@/components/ui/badge.astro";

const { direction, title, text, badge } = Astro.props;

interface Props {
  direction: "left" | "right";
  title: string;
  text: string;
  badge: string;
}
---

<div class="w-full py-10 lg:py-20 px-4"> 
  <div class="container mx-auto">
    <div class="flex flex-col-reverse lg:flex-row gap-10 lg:items-center">
      <div class:list={[direction === 'left' ? 'order-1' : 'order-2', "bg-muted rounded-md w-full aspect-video h-full flex-1 bg-gray-200 "]}></div>
      <div class:list={[direction === 'left' ? 'order-2' : 'order-1',"flex gap-4 pl-0 lg:pl-20 flex-col  flex-1 "]}>
        <div>
          <Badge>{badge}</Badge>
        </div>
        <div class="flex gap-2 flex-col">
          <h2 class="text-xl font-semibold lg:font-normal md:text-3xl lg:text-5xl tracking-tighter lg:max-w-xl font-regular text-left">
            {title}
          </h2>
          <p class="text-md max-w-xl lg:max-w-sm leading-relaxed tracking-tight text-muted-foreground text-left">
            {text}
          </p>
        </div>
      </div>
    </div>
  </div>
</div>