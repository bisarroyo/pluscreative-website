---

import Badge  from "@/components/ui/badge.astro";
import Button from "@/components/ui/button.astro";
import Check from "@/icons/check.astro";
import Right from "@/icons/right.astro";

---


<div class="w-full py-20 lg:py-40 px-4 xl:px-0">
  <div class="container max-w-6xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-10">
      <div class="flex flex-col gap-6">
        <div class="flex flex-col gap-4">
          <div>
            <Badge>Contact</Badge>
          </div>
          <div class="flex flex-col gap-2">
            <h4 class="text-3xl md:text-5xl tracking-tighter max-w-xl text-left font-regular">
              Something new
            </h4>
            <p class="text-lg leading-relaxed tracking-tight text-muted-foreground max-w-sm text-left">
              Managing a small business today is already tough. Avoid
              further complications by ditching outdated, tedious trade
              methods.
            </p>
          </div>
        </div>
        <div class="flex flex-row gap-6 items-start text-left">
            <Check class="w-4 h-4 mt-2 text-primary" />
          <div class="flex flex-col gap-1">
            <p>Easy to use</p>
            <p class="text-muted-foreground text-sm">
              We&apos;ve made it easy to use and understand.
            </p>
          </div>
        </div>
        <div class="flex flex-row gap-6 items-start text-left">
            <Check class="w-4 h-4 mt-2 text-primary" />
          <div class="flex flex-col gap-1">
            <p>Fast and reliable</p>
            <p class="text-muted-foreground text-sm">
              We&apos;ve made it easy to use and understand.
            </p>
          </div>
        </div>
        <div class="flex flex-row gap-6 items-start text-left">
            <Check class="w-4 h-4 mt-2 text-primary" />
          <div class="flex flex-col gap-1">
            <p>Beautiful and modern</p>
            <p class="text-muted-foreground text-sm">
              We&apos;ve made it easy to use and understand.
            </p>
          </div>
        </div>
      </div>

      <div class="justify-center flex items-center">
        <div class="rounded-md max-w-md w-full flex flex-col border border-gray-400 p-8 gap-4">
          <p>Deja tu mensaje</p>
          <div class="grid w-full max-w-md items-center gap-1">
            <label for="firstname">Nombre</label>
            <input id="firstname" type="text" class="border border-gray-400 rounded-md px-2 py-1 ring-none outline-0"/>
          </div>
          <div class="grid w-full max-w-md items-center gap-1">
            <label for="lastname">Asunto</label>
            <input id="lastname" type="text" class="border border-gray-400 rounded-md px-2 py-1 ring-none outline-0" />
          </div>
          <div class="grid w-full max-w-md items-center gap-1">
            <label for="messaje">Mensaje</label>
            <textarea id="messaje" class="resize-none border border-gray-400 rounded-md px-2 py-1 ring-none outline-0" />
          </div>

          <Button class="gap-4 w-full">
            Enviar <Right class="w-4 h-4" />
          </Button>
        </div>
      </div>
    </div>
  </div>
</div>
